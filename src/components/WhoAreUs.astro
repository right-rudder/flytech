---
import ImageComp from "./ImageComp.astro";
const { content } = Astro.props;
---

<div class="relative bg-white w-full">
  <ImageComp
    imagePath={content.imagePath}
    imageAlt={content.imageAlt}
    loading="lazy"
    styles="h-56 w-full bg-gray-50 object-cover lg:absolute lg:inset-y-0 lg:left-0 lg:h-full lg:w-1/2"
  />
  <div class="mx-auto grid max-w-7xl lg:grid-cols-2">
    <div
      class="px-6 pt-16 pb-24 sm:pt-20 sm:pb-32 lg:col-start-2 lg:px-8 lg:pt-32"
    >
      <div class="mx-auto max-w-2xl lg:mr-0 lg:max-w-lg">
        <h2
          class="text-2xl font-semibold text-primary-600 uppercase tracking-wide"
        >
          {content.upperHeading}
        </h2>
        <p
          class="mt-2 font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl"
        >
          {content.title}
        </p>
        {
          content.descriptions &&
            content.descriptions.map((paragraph) => (
              <p class="mt-6 text-lg/8 text-gray-600">{paragraph}</p>
            ))
        }

        <dl
          class="mt-16 grid max-w-xl grid-cols-1 gap-8 sm:mt-20 sm:grid-cols-2 xl:mt-16"
        >
          {
            content.bullets &&
              content.bullets.map((bullet) => (
                <div class="flex flex-col gap-y-3 border-l border-gray-900/10 pl-6">
                  <dt class="text-sm/6 lg:text-base text-neutral-800">
                    {bullet.title}
                  </dt>
                  <dd class="order-first text-3xl lg:text-4xl font-semibold tracking-tight text-primary-700">
                    {bullet.numbers}
                  </dd>
                </div>
              ))
          }
        </dl>
      </div>
    </div>
  </div>
</div>

---
const FORM_WEBHOOK_URL = import.meta.env.DISCOVERY_FLIGHT_FORM_WEBHOOK_URL;
const PORTAL_API_KEY = import.meta.env.PORTAL_API_KEY;
const CP_ACCOUNT_RANDOM_ID = import.meta.env.CP_ACCOUNT_RANDOM_ID;
---

<form class="mx-auto max-w-xl" id="discovery-flight">
  <div class="grid grid-cols-1 gap-x-8 gap-y-2 sm:grid-cols-2">
    <!-- First Name -->
    <div>
      <div class="mt-2.5">
        <input
          type="text"
          name="first-name"
          id="first-name"
          autocomplete="given-name"
          placeholder="First Name"
          required
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        />
      </div>
    </div>

    <!-- Last Name -->
    <div>
      <div class="mt-2.5">
        <input
          type="text"
          name="last-name"
          id="last-name"
          autocomplete="family-name"
          placeholder="Last Name"
          required
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        />
      </div>
    </div>

    <!-- Email -->
    <div class="sm:col-span-2">
      <div class="mt-2.5">
        <input
          type="email"
          name="email"
          id="email"
          autocomplete="email"
          placeholder="Email Address"
          required
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        />
      </div>
    </div>
    <p class="hidden">
      <label>
        Don't fill this out if you're human: <input name="confirm-email" />
      </label>
    </p>

    <!-- Phone -->
    <div class="sm:col-span-2">
      <div class="relative mt-2.5">
        <input
          type="tel"
          name="phone"
          id="phone"
          autocomplete="tel"
          placeholder="Phone Number"
          required
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        />
      </div>
    </div>

    <!-- Date and Time -->
    <div class="sm:col-span-2">
      <!-- Requested Date -->
      <div class="mt-2.5">
        <label
          for="requested-date"
          class="mb-0 block py-2 text-sm text-gray-900 text-white"
        >
          Requested Date
        </label>
        <input
          required
          type="date"
          id="requested-date"
          name="requested-date"
          value="2018-06-12T19:30"
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        />
      </div>

      <!-- Requested Time-->
      <div class="mt-2.5">
        <label
          for="request-time"
          class="mb-0 block py-2 text-sm text-gray-900 text-white"
        >
          Requested Time
        </label>
        <select
          required
          id="request-time"
          name="request-time"
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        >
          <option value="7A - 9AM" class="bg-primary-600">7AM - 9AM</option>
          <option value="9A - 11AM" class="bg-primary-600">9AM - 11AM</option>
          <option value="11A - 1PM" class="bg-primary-600">11AM - 1PM</option>
          <option value="1PM - 3PM" class="bg-primary-600">1PM - 3PM</option>
        </select>
      </div>

      <!-- Goal-->
      <div class="mt-2.5">
        <label
          for="discovery-goal"
          class="mb-0 block py-2 text-sm text-gray-900 text-white"
        >
          Goal
        </label>
        <select
          required
          id="discovery-goal"
          name="discovery-goal"
          class="block font-extralight w-full py-2 shadow-sm ring-inset ring-gray-300 placeholder:text-gray-300 bg-transparent border-b-[1px] border-gray-300 sm:text-sm sm:leading-6 outline-none"
        >
          <option value="recreational" class="bg-primary-600"
            >Recreational</option
          >
          <option value="professional" class="bg-primary-600"
            >Professional</option
          >
          <option value="other" class="bg-primary-600">Other</option>
        </select>
      </div>

      <div class="mt-2.5">
        <span class="text-white/90 text-sm font-medium"
          >*This is only a request, staff will contact you for confirmation on
          date and time.</span
        >
      </div>
    </div>

    <!-- Agreement -->
    <div class="flex gap-x-4 sm:col-span-2">
      <div class="flex h-6 items-center">
        <button
          type="button"
          id="terms-toggle"
          class="ring-primary-900/5 flex w-8 flex-none cursor-pointer bg-neutral-600 p-px ring-1 transition-colors duration-200 ease-in-out ring-inset focus-visible:outline focus-visible:outline-offset-2 focus-visible:outline-gray-900"
          role="switch"
          aria-checked="false"
          aria-labelledby="switch-1-label"
        >
          <span class="sr-only">
            I agree to terms & conditions provided by the company.
          </span>
          <span
            id="terms-thumb"
            class="h-4 w-4 translate-x-0 transform bg-white shadow-sm ring-1 ring-gray-900/50 transition duration-200 ease-in-out"
            aria-hidden="true"></span>
        </button>
        <input type="hidden" id="agree-terms" name="agree-terms" value="no" />
      </div>
      <label class="text-sm leading-6 text-white/90" id="switch-1-label">
        I agree to the <a
          href="/privacy-policy-terms-of-service"
          target="_blank"
          class="text-white hover:text-primary-400 font-semibold hover:underline"
          >Privacy Policy</a
        > and <a
          href="/privacy-policy-terms-of-service#terms-of-service"
          target="_blank"
          class="text-white hover:text-primary-400 font-semibold hover:underline"
          >Terms of Service</a
        > provided by the company. By providing my phone number, I agree to receive
        text notes from the business.
      </label>
    </div>
  </div>
  <div class="mt-10 w-full flex items-center justify-center">
    <button type="submit" id="submit-btn" class="btn-primary">Submit</button>
  </div>
</form>

<script define:vars={{ FORM_WEBHOOK_URL, PORTAL_API_KEY, CP_ACCOUNT_RANDOM_ID }}
>
  const dateInput = document.getElementById("requested-date");
  const today = new Date();
  today.setHours(0, 0, 0, 0);
  const minDate = new Date(today);
  minDate.setDate(today.getDate() + 5);
  const formatDate = (date) => {
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, "0");
    const day = String(date.getDate()).padStart(2, "0");
    return `${year}-${month}-${day}`;
  };
  dateInput.min = formatDate(minDate);

  // Terms toggle
  const toggle = document.getElementById("terms-toggle");
  const thumb = document.getElementById("terms-thumb");
  const hiddenInput = document.getElementById("agree-terms");
  const submitBtn = document.getElementById("submit-btn");
  const form = document.getElementById("enroll_form");

  let isChecked = false;
  const SUBMIT_COOLDOWN = 30 * 1000; // 30 seconds

  toggle.addEventListener("click", () => {
    isChecked = !isChecked;
    hiddenInput.value = isChecked ? "yes" : "no";
    toggle.setAttribute("aria-checked", isChecked);
    toggle.classList.toggle("bg-primary-600", isChecked);
    toggle.classList.toggle("bg-neutral-600", !isChecked);
    thumb.classList.toggle("translate-x-3.5", isChecked);
    thumb.classList.toggle("translate-x-0", !isChecked);

    submitBtn.disabled = !isChecked;
    submitBtn.classList.toggle("cursor-not-allowed", !isChecked);
    submitBtn.classList.toggle("bg-gray-400", !isChecked);
  });

  // Initialize
  submitBtn.disabled = true;
  submitBtn.classList.add("cursor-not-allowed", "bg-gray-400");

  if (!form) {
    console.error("Form element not found.");
  } else {
    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      const formData = new FormData(form);
      if (formData.get("confirm-email")?.trim()) return; // honeypot

      // Prevent multiple submissions
      const lastSubmit = parseInt(
        localStorage.getItem("discoveryLastSubmit") || "0",
        10,
      );
      const now = Date.now();
      if (now - lastSubmit < SUBMIT_COOLDOWN) {
        alert("Please wait a few seconds before submitting again.");
        return;
      }
      localStorage.setItem("discoveryLastSubmit", now.toString());

      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.classList.add("cursor-not-allowed", "bg-gray-400");

      try {
        const [ghlRes, portalRes] = await Promise.all([
          fetch(FORM_WEBHOOK_URL, {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: new URLSearchParams(formData).toString(),
          }),
          fetch("https://portal.rightruddermarketing.com/api/leads", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              Accept: "application/json",
              "x-api-key": PORTAL_API_KEY,
            },
            body: JSON.stringify({
              first_name: formData.get("first-name")?.toString() || "",
              last_name: formData.get("last-name")?.toString() || "",
              email: formData.get("email")?.toString() || "",
              phone: formData.get("phone")?.toString() || "",
              requested_date: formData.get("requested-date")?.toString() || "",
              request_time: formData.get("request-time")?.toString() || "",
              campaign: "discovery_flight",
              account_random_id: CP_ACCOUNT_RANDOM_ID,
            }),
          }),
        ]);

        if (ghlRes.ok && portalRes.ok) {
          window.location.href = "/discovery-confirmation";
        } else {
          alert("Submission failed. Please try again later.");
          submitBtn.disabled = false;
          submitBtn.classList.remove("cursor-not-allowed", "bg-gray-400");
        }
      } catch (err) {
        console.error("Submission error:", err);
        alert("An error occurred. Please try again later.");
        submitBtn.disabled = false;
        submitBtn.classList.remove("cursor-not-allowed", "bg-gray-400");
      }
    });
  }
</script>


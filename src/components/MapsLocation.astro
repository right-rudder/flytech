---
import { COMPANY_NAME, AIRPORT, AIRPORT_CODE, LOCATIONS } from "../consts";

const { bgColorRed = true } = Astro.props;
---

<section class={`bg-neutral-900`}>
  <div
    class="max-w-7xl mx-auto flex flex-col-reverse items-center px-10 lg:flex-row"
  >
    <div class="lg:w-1/2 flex flex-col items-center py-10 h-[30rem] w-full">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3066.5821436563792!2d-94.90319219999999!3d39.77148929999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c00533898f9425%3A0x31ee2a79086483c0!2sFlyTech%20Pilot%20Academy!5e0!3m2!1sen!2sus!4v1754004219529!5m2!1sen!2sus"
        class="w-full h-full max-w-2xl"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div
      class="w-10/12 lg:w-1/2 flex flex-col gap-5 items-center py-10 lg:py-20"
    >
      <div class="max-w-2xl lg:px-10 flex flex-col items-left">
        <h2 class="text-lg font-bold text-primary-500 uppercase tracking-wide">
          Our Location
        </h2>
        <h3
          class="text-2xl md:text-3xl font-semibold text-white leading-tight py-4"
        >
          Located at {AIRPORT}
          {AIRPORT_CODE} in {LOCATIONS[0].city}, {LOCATIONS[0].state}
        </h3>
        <div class="tracking-wider">
          <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
            {COMPANY_NAME} operates from {AIRPORT} - {AIRPORT_CODE}, just
            minutes from downtown St. Joseph. Our strategic location provides an
            excellent training environment with open airspace, minimal traffic
            congestion, and direct access to both controlled and uncontrolled
            airspace for real-world navigation and radio experience. We offer a
            focused, safe, and efficient setting for aspiring pilots year-round.
          </p>
        </div>
        <a href="=#">
          <div class="btn-primary mt-10">Visit Us Today</div>
        </a>
      </div>
    </div>
  </div>
</section>

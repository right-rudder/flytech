---
import TextCard from "./TextCard.astro";
import ImageComp2 from "../ImageComp2.astro";

import img1 from "../../assets/students-in-front-of-slinger-3.webp";
import img2 from "../../assets/simulator-with-student.webp";
import img3 from "../../assets/student-receiving-certificate-3.webp";

const textContent = {
  upperheading: "STUDENT RESOURCES",
  title: `At <span class="text-primary-500">FlyTech</span> you learn more`,
  description:
    "We provide our students with the best content and resources. We tailor the knowledge to everthing you must know",
};

const cardContent = {
  cardMain: {
    upperheading: "Resources",
    title: `Resources`,
    description: "Check our student resources",
  },
  cardTop: {
    upperheading: "Enroll now",
    title: `Video Content`,
    description: "Prepare yourself with great videos and channels",
  },
  cardBottom: {
    upperheading: "Login now",
    title: `Login now`,
    description: "Login to your account at Four Forces / Ground School",
  },
};
---

<section class="relative bg-white py-20">
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="flex flex-col gap-10 lg:flex-row">
      <div class="w-full lg:w-1/3">
        <TextCard content={textContent} />
      </div>

      <div
        class="w-full h-full lg:w-2/3 mt-6 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:grid-rows-2 sm:gap-x-6 lg:gap-8"
      >
        <!-- Card Left -->
        <div
          class="group overflow-hidden relative aspect-square sm:row-span-2 bg-black"
        >
          <ImageComp2
            imagePath={img3}
            imageAlt="Background Image"
            styles="absolute size-full object-cover group-hover:opacity-65 opacity-70"
          />
          <div aria-hidden="true" class="absolute inset-0 bg--black/60"></div>
          <div class="absolute inset-0 flex items-end pl-12 pb-12">
            <div>
              <h3 class="text-3xl font-bold uppercase text-white">
                <a href="#">
                  <Fragment set:html={cardContent.cardMain.title} />
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-lg text-white">
                <Fragment set:html={cardContent.cardMain.description} />
              </p>
            </div>
          </div>
        </div>
        <!-- Card Top -->
        <div
          class="group overflow-hidden relative aspect-square sm:aspect-auto bg-black"
        >
          <ImageComp2
            imagePath={img1}
            imageAlt="Background Image"
            styles="absolute size-full object-cover group-hover:opacity-65 opacity-70"
          />
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-linear-to-b from-transparent to-black opacity-50"
          >
          </div>
          <div class="absolute inset-0 flex items-end pl-6 pb-6">
            <div>
              <h3 class="text-2xl font-bold uppercase text-white">
                <a href="#">
                  <Fragment set:html={cardContent.cardTop.title} />
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-lg text-white">
                <Fragment set:html={cardContent.cardTop.description} />
              </p>
            </div>
          </div>
        </div>
        <!-- Card Bottom -->
        <div
          class="group overflow-hidden relative aspect-square sm:aspect-auto bg-black"
        >
          <ImageComp2
            imagePath={img2}
            imageAlt="Background Image"
            styles="absolute size-full object-cover group-hover:opacity-65 opacity-70"
          />
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-linear-to-b from-transparent to-black opacity-50"
          >
          </div>
          <div class="absolute inset-0 flex items-end pl-6 pb-6">
            <div>
              <h3 class="text-2xl font-bold uppercase text-white">
                <a href="#">
                  <Fragment set:html={cardContent.cardBottom.title} />
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-lg text-white">
                <Fragment set:html={cardContent.cardBottom.description} />
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

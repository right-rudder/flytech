---
import TextCard from "./TextCard.astro";

const textContent = {
  upperheading: "Enroll now",
  title: `Reach out at <span class="text-primary-500">FlyTech</span>`,
  description: "Let's Get You In The Air",
};

const cardContent = {
  cardMain: {
    upperheading: "Enroll now",
    title: `Reach out at <span class="text-primary-500">FlyTech</span>`,
    description: "Let's Get You In The Air",
  },
  cardTop: {
    upperheading: "Enroll now",
    title: `Reach out at <span class="text-primary-500">FlyTech</span>`,
    description: "Let's Get You In The Air",
  },
  cardBottom: {
    upperheading: "Enroll now",
    title: `Reach out at <span class="text-primary-500">FlyTech</span>`,
    description: "Let's Get You In The Air",
  },
};
---

<section class="relative bg-white py-20">
  <div class="relative z-10 max-w-7xl mx-auto">
    <div class="flex flex-col gap-10 lg:flex-row">
      <div class="w-full lg:w-1/3">
        <TextCard content={textContent} />
      </div>

      <div
        class="w-full h-full lg:w-2/3 mt-6 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:grid-rows-2 sm:gap-x-6 lg:gap-8"
      >
        <!-- Card Left -->
        <div
          class="group overflow-hidden relative aspect-square rounded-lg sm:row-span-2 bg-black"
        >
          <img
            src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-03-featured-category.jpg"
            alt="Two models wearing women's black cotton crewneck tee and off-white cotton crewneck tee."
            class="absolute size-full object-cover group-hover:opacity-75"
          />
          <div aria-hidden="true" class="absolute inset-0 bg--black/60"></div>
          <div class="absolute inset-0 flex items-end pl-12 pb-12">
            <div>
              <h3 class="text-3xl font-semibold text-white">
                <a href="#">
                  <Fragment set:html={cardContent.cardMain.title} />
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-lg text-white">
                <Fragment set:html={cardContent.cardMain.description} />
              </p>
            </div>
          </div>
        </div>
        <!-- Card Top -->
        <div
          class="group overflow-hidden relative aspect-square rounded-lg sm:aspect-auto bg-black"
        >
          <img
            src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-03-category-01.jpg"
            alt="Wooden shelf with gray and olive drab green baseball caps, next to wooden clothes hanger with sweaters."
            class="absolute size-full object-cover group-hover:opacity-25"
          />
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-linear-to-b from-transparent to-black opacity-50"
          >
          </div>
          <div class="absolute inset-0 flex items-end p-6">
            <div>
              <h3 class="font-semibold text-white">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  Accessories
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-sm text-white">Shop now</p>
            </div>
          </div>
        </div>
        <!-- Card Bottom -->
        <div
          class="group overflow-hidden relative aspect-square rounded-lg sm:aspect-auto bg-black"
        >
          <img
            src="https://tailwindcss.com/plus-assets/img/ecommerce-images/home-page-03-category-02.jpg"
            alt="Walnut desk organizer set with white modular trays, next to porcelain mug on wooden desk."
            class="absolute size-full object-cover group-hover:opacity-75"
          />
          <div
            aria-hidden="true"
            class="absolute inset-0 bg-linear-to-b from-transparent to-black opacity-50"
          >
          </div>
          <div class="absolute inset-0 flex items-end p-6">
            <div>
              <h3 class="font-semibold text-white">
                <a href="#">
                  <span class="absolute inset-0"></span>
                  Workspace
                </a>
              </h3>
              <p aria-hidden="true" class="mt-1 text-sm text-white">Shop now</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

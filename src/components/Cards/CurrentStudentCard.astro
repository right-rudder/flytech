---
import ImageComp2 from "../ImageComp2.astro";
import img1 from "../../assets/students-in-front-of-slinger-3.webp";
import { YouTube } from "astro-embed";

const { content, items, video, imageBackground } = Astro.props;
---

<div class="mx-auto max-w-2xl px-4 py-6 sm:px-6 sm:py-12 lg:max-w-7xl">
  <div class="relative overflow-hidden lg:h-96">
    <div class="absolute inset-0">
      <ImageComp2
        imagePath={imageBackground || img1}
        imageAlt="Background Image"
        styles="size-full object-cover"
      />
    </div>
    <div aria-hidden="true" class="relative h-96 w-full lg:hidden"></div>
    <div aria-hidden="true" class="relative h-32 w-full lg:hidden"></div>
    <div
      class="absolute inset-x-0 bottom-0 bg-primary-600/90 p-6 backdrop-blur-sm backdrop-filter sm:flex sm:items-center sm:justify-between lg:inset-x-auto lg:inset-y-0 lg:w-96 lg:flex-col lg:items-start"
    >
      <div>
        <!-- <h2 class="text-xl font-bold text-white">
          {content.name}
        </h2> -->
        <p class="mt-1 text-sm text-gray-300">
          {content.description}
        </p>
      </div>
      {
        items.map((item) => (
          <>
            <h2 class="text-xl font-bold text-white">{item.title}</h2>
            <p class="mt-1 text-sm text-gray-300">{item.description}</p>
            <a
              href={item.link}
              class="mt-6 flex shrink-0 items-center justify-center border border-white/25 px-4 py-3 text-base font-medium text-white hover:bg-white/10 sm:mt-0 sm:ml-8 lg:ml-0 lg:w-full"
            >
              {item.title}
            </a>
            {item.phone && (
              <a
                href={`tel:${item.phone}`}
                class="mt-2 text-center text-sm text-gray-300 underline sm:mt-0 sm:ml-8 lg:mt-2 lg:ml-0 lg:w-full"
              >
                {item.specialty}, call {item.phone}
              </a>
            )}
          </>
        ))
      }

      {
        video && (
          <div class="mt-6 flex w-full justify-center">
            <YouTube
              id={video.youtubeId}
              class="aspect-video w-full"
              params="start=0"
              posterQuality="max"
            />
          </div>
        )
      }
    </div>
  </div>
</div>

---
const { content } = Astro.props;
import ImageComp from "../ImageComp.astro";
import imgLeft from "../../assets/plane-slinger-ground-pilots-saying-goodbye.webp";
import imgRight from "../../assets/plane-cesna-ground-flytech (4).webp";
import imgTop from "../../assets/pilots-inside-plane-sunset.webp";
import imgBottom from "../../assets/simulator.webp";
---

<div class="bg-white">
  <div class="pt-6">
    {/* Image gallery */}
    <div
      class="mx-auto mt-6 max-w-2xl sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:gap-8 lg:px-8"
    >
      <a
        href="#Sling Aircraft"
        class="row-span-2 aspect-3/4 size-full object-cover max-lg:hidden group relative hover:ring-2 hover:ring-primary-300"
      >
        <!-- Background image -->
        <img
          src={imgLeft.src}
          alt="Two each of gray, white, and black shirts laying flat."
          class="row-span-2 aspect-3/4 size-full object-cover max-lg:hidden"
        />

        <!-- Background overlay - now properly positioned -->
        <div
          class="absolute inset-0 z-10 bg-primary-900/60 lg:bg-primary-900/40 group-hover:bg-primary-900/60 duration-500"
        >
        </div>

        <!-- Text - needs higher z-index than overlay -->
        <div class="absolute inset-0 z-20 flex flex-col justify-end pb-8 px-8">
          <p
            class="text-lg font-bold text-primary-400 uppercase tracking-wide mb-4 text-center lg:text-left"
          >
            Aircraft
          </p>
          <h2
            class="text-3xl lg:text-5xl font-bold text-white mb-4 text-center lg:text-left"
          >
            Sling
          </h2>
          <p class="text-lg text-muted-200 mb-6 text-center lg:text-left">
            Advanced aircraft
          </p>
        </div>
      </a>

      <a
        href="#fleet"
        class="col-start-2 aspect-3/2 size-full object-cover max-lg:hidden"
      >
        <img
          src={imgTop.src}
          alt="Model wearing plain black basic tee."
          class="col-start-2 aspect-3/2 size-full object-cover max-lg:hidden"
        />
      </a>

      <a
        href="#simulator"
        class="col-start-2 row-start-2 aspect-3/2 size-full object-cover max-lg:hidden group relative"
      >
        <!-- Background image -->
        <img
          src={imgBottom.src}
          alt="Flight simulator"
          class="col-start-2 row-start-2 aspect-3/2 size-full object-cover max-lg:hidden"
        />

        <!-- Background overlay -->
        <div
          class="absolute inset-0 z-10 bg-primary-900/70 lg:bg-primary-900/50 group-hover:bg-primary-900/70 duration-500"
        >
        </div>

        <!-- Text content -->
        <div
          class="absolute inset-0 z-20 flex flex-col justify-end items-center p-6 text-center"
        >
          <p
            class="text-lg font-bold text-primary-500 uppercase tracking-wide mb-2"
          >
            Training
          </p>
          <h2 class="text-3xl lg:text-4xl font-bold text-white mb-2">
            Simulator
          </h2>
          <p class="text-lg text-muted-200">Certified Redbird SIM</p>
        </div>
      </a>

      <a
        href="#Cessna"
        class="row-span-2 aspect-4/5 size-full object-cover lg:aspect-3/4 group relative"
      >
        <!-- Background image -->
        <img
          src={imgRight.src}
          alt="Cessna aircraft"
          class="row-span-2 aspect-4/5 size-full object-cover lg:aspect-3/4"
        />

        <!-- Background overlay -->
        <div
          class="absolute inset-0 z-10 bg-primary-900/70 lg:bg-primary-900/50 group-hover:bg-primary-900/70 duration-500"
        >
        </div>

        <!-- Text content -->
        <div class="absolute inset-0 z-20 flex flex-col justify-end pb-8 px-8">
          <p
            class="text-lg font-bold text-primary-500 uppercase tracking-wide mb-4 text-center lg:text-right"
          >
            Aircraft
          </p>
          <h2
            class="text-3xl lg:text-5xl font-bold text-white mb-4 text-center lg:text-right"
          >
            Cessna
          </h2>
          <p class="text-lg text-muted-200 mb-6 text-center lg:text-right">
            Our reliable instrument trainer and time-builder
          </p>
        </div>
      </a>
    </div>

    {/* Product info */}
    <div
      class="mx-auto max-w-2xl px-4 pt-10 pb-16 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto_auto_1fr] lg:gap-x-8 lg:px-8 lg:pt-16 lg:pb-24"
      id="fleet"
    >
      <div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">
        <h2
          class="text-2xl font-bold tracking-tight text-primary-600 sm:text-4xl uppercase"
        >
          {content.title}
        </h2>
      </div>

      {/* Options */}
      <div class="mt-4 lg:row-span-3 lg:mt-0">
        <h2 class="sr-only">Product information</h2>
        <p class="text-3xl tracking-tight text-gray-900">
          {content.testimonials.title}
        </p>
        <p class="mt-4 text-base text-gray-600">
          {content.testimonials.description}
        </p>

        {
          content.testimonials.testimonials.map((testimonial) => (
            <div class="mt-6">
              <h3 class="sr-only">Reviews</h3>
              <div class="flex items-center">
                <div class="flex items-center">
                  {/* Active: "text-gray-900", Default: "text-gray-200" */}
                  {[1, 2, 3, 4, 5].map(() => (
                    <svg
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      data-slot="icon"
                      aria-hidden="true"
                      class="size-5 shrink-0 text-primary-600"
                    >
                      <path
                        d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                        clip-rule="evenodd"
                        fill-rule="evenodd"
                      />
                    </svg>
                  ))}
                </div>
                <p class="sr-only">5 out of 5 stars</p>
                <p class="ml-3 text-sm font-medium text-neutral-600 hover:text-primary-600">
                  {testimonial.name}
                </p>
              </div>
              <p class="py-2 text-sm text-gray-500">{testimonial.feedback}</p>
            </div>
          ))
        }

        <div class="mt-10">
          <div class="mt-10">
            <div class="flex items-center justify-between">
              <p class="text-sm font-medium text-gray-900">Our Fleet</p>
              <p
                class="text-sm font-medium text-primary-600 hover:text-primary-500"
              >
                Check out our planes!
              </p>
            </div>
          </div>

          <a
            href="/discovery-flight"
            class="mt-10 flex w-full items-center justify-center border border-transparent bg-primary-600 px-8 py-3 text-base font-medium text-white hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:outline-hidden"
          >
            Discovery Flight
          </a>
        </div>
      </div>

      <div
        class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pt-6 lg:pr-8 lg:pb-16"
      >
        {/* Description and details */}
        <div>
          <h3 class="sr-only">Description</h3>

          <div class="space-y-6">
            <p class="text-base text-gray-900">
              {content.description}
            </p>
          </div>
        </div>

        <div class="mt-10">
          <h3 class="text-sm font-medium text-gray-900">Highlights</h3>

          <div class="mt-4">
            <ul role="list" class="list-none space-y-2 pl-4 text-sm">
              {
                content.features.map((feature) => (
                  <li class="text-gray-400">
                    <h4 class="text-primary-600 py-2 text-lg">
                      {feature.title}
                    </h4>
                    <p class="text-gray-600">{feature.description}</p>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>

        {
          content.others.map((other) => (
            <div class="mt-10">
              <h3 class="text-sm font-medium text-gray-900">{other.title}</h3>
              <p class="mt-1 text-sm text-gray-600">{other.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

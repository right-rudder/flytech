---
const { content, index } = Astro.props;
import ImageComp from "../ImageComp.astro";
import imgLeft from "../../assets/N900FT-ground.webp";
---

<div class="bg-neutral-800" id={content.manufacture}>
  <div class="mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <!-- Product -->
    <div
      class="lg:grid lg:grid-cols-7 lg:grid-rows-1 lg:gap-x-8 lg:gap-y-10 xl:gap-x-16"
    >
      <!-- Product image -->
      <div class="lg:col-span-4 lg:row-end-1">
        <ImageComp
          imagePath={content.imagePath}
          imageAlt="Sample of 30 icons with friendly and fun details in outline, filled, and brand color styles."
          styles="aspect-4/3 w-full  bg-gray-100 object-cover"
        />
      </div>

      <!-- Product details -->
      <div
        class="mx-auto mt-14 max-w-2xl sm:mt-16 lg:col-span-3 lg:row-span-2 lg:row-end-2 lg:mt-0 lg:max-w-none"
      >
        <div class="flex flex-col-reverse">
          <div class="mt-4">
            <h2
              class="text-2xl font-bold tracking-tight text-white sm:text-3xl"
            >
              {content.name}
            </h2>

            <!-- <p class="mt-2 text-sm text-white">
              {content.summary}
            </p> -->
          </div>

          <div>
            <h3 class="text-primary-600 uppercase">{content.manufacture}</h3>
          </div>
        </div>

        <p class="mt-6 text-white">
          {content.description}
        </p>

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
          <a
            href="/discovery-flight"
            class="flex w-full items-center justify-center border border-transparent bg-primary-50 px-8 py-3 text-base font-medium text-primary-700 hover:bg-primary-500 hover:text-white focus:ring-2 duration-500 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-gray-50 focus:outline-hidden"
            >Discovery Flight</a
          >
        </div>

        <div class="mt-10 border-t border-gray-200 pt-10">
          <h3 class="text-sm font-medium text-primary-600">Features</h3>
          <div class="mt-4">
            <ul
              role="list"
              class="list-disc space-y-1 pl-5 text-sm/6 text-white marker:text-neutral-100"
            >
              {content.features.map((feature) => <li class="">{feature}</li>)}
            </ul>
          </div>
        </div>

        <div class="pt-12">
          <ImageComp
            imagePath={content.images[0].imagePath}
            imageAlt="Sample of 30 icons with friendly and fun details in outline, filled, and brand color styles."
            styles="aspect-video w-full h-1/3 bg-gray-100 object-cover"
          />
        </div>
      </div>

      <!-- Model Details -->
      <div
        class="mx-auto mt-16 w-full max-w-2xl lg:col-span-4 lg:mt-0 lg:max-w-none"
      >
        <el-tab-group>
          <div class="border-b border-gray-200">
            <el-tab-list class="-mb-px flex space-x-8">
              <button
                id="tab-model"
                class="border-b-2 border-transparent py-6 text-sm font-medium whitespace-nowrap text-white/90 hover:border-gray-300 hover:text-primary-600 aria-selected:border-primary-600 aria-selected:text-primary-600"
                >Model</button
              >
            </el-tab-list>
          </div>
          <el-tab-panels>
            <!-- Model Specifications Panel -->
            <div id="tab-panel-model" class="-mb-10">
              <h3 class="sr-only">Model specifications:</h3>

              <h3 class="py-5 font-medium text-primary-600">
                Aircraft - {content.model}
              </h3>
              <div class="flex space-x-4 text-sm text-white">
                <div class="py-5 flex flex-wrap w-3/4 gap-12">
                  <div class="mt-2">
                    <p class="text-sm/6 text-white/80">Engine</p>
                    <div class="mt-4 flex items-center">
                      <!-- <svg
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        data-slot="icon"
                        aria-hidden="true"
                        class="size-5 shrink-0 text-primary-400"
                      >
                        <path
                          d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z"
                          clip-rule="evenodd"
                          fill-rule="evenodd"></path>
                      </svg> -->
                      <div class="text-sm/6 text-white">
                        <p>
                          {content.engine}
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </el-tab-panels>
        </el-tab-group>
      </div>
    </div>
  </div>
</div>

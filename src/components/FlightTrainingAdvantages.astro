---
import { FaCheck } from "react-icons/fa";
import ImageComp from "./ImageComp.astro";
const content = Astro.props.content || {};
const { title, upperheading, description, advantages, imagePath, imageAlt } =
  content;
---

<section class="py-16 lg:py-24 bg-neutral-900">
  <div
    class="mx-auto max-w-7xl px-6 lg:px-8 flex flex-col lg:flex-row items-center gap-12"
  >
    <!-- Text Content (Right) -->
    <div class="w-full lg:w-1/2">
      <p
        class="text-lg font-bold text-primary-500 uppercase tracking-wide mb-4 text-center lg:text-right"
      >
        {upperheading}
      </p>
      <h2
        class="text-3xl lg:text-5xl font-bold text-white mb-4 text-center lg:text-right"
      >
        {title}
      </h2>
      <p class="text-lg text-muted-200 mb-6 text-center lg:text-right">
        {description}
      </p>
      <ul class="space-y-4 text-center lg:text-right">
        {
          advantages.map((advantage, index) => (
            <li
              class="flex text-muted-200 items-start space-x-3"
              data-aos="fade-right"
              data-aos-delay={index * 100}
            >
              <div>
                <h3 class="text-lg font-semibold text-primary-500">
                  {advantage.title}
                </h3>
                <p class="">{advantage.description}</p>
              </div>
              <span class="text-primary-500 text-2xl hidden lg:block lg:self-center px-2">
                <FaCheck />
              </span>
            </li>
          ))
        }
      </ul>
    </div>
    <!-- Image Section (Left) -->
    <div class="w-full lg:w-1/2" data-aos="fade-right">
      <ImageComp
        imagePath={imagePath}
        imageAlt={imageAlt}
        styles=" shadow-lg w-full h-auto object-cover"
      />
    </div>
  </div>
</section>

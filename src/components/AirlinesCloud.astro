---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<section class="py-5 lg:py-12 bg-white">
  <div class="">
    <div class="mx-auto max-w-5xl px-6 lg:px-8">
      <h3
        class="text-4xl lg:text-6xl lg:max-w-5xl font-title text-center font-bold tracking-tight text-primary-700"
      >
        Our Partners
      </h3>
      <h4
        class="mx-auto mt-4 text-lg lg:text-2xl max-w-3xl text-center tracking-loose text-gray-900"
      >
        Your Path From Student Pilot to First Officer starts with us
      </h4>

      <div
        class="mx-auto mt-12 flex flex-wrap justify-center align-middle items-center gap-16"
      >
        {
          data.airlines.map((airline) => (
            <a href={airline.link} target="_blank">
              <ImageComp
                imagePath={airline.imagePath}
                imageAlt={airline.imageAlt}
                styles="max-w-52 lg:max-w-40 lg:max-h-16 object-contain hover:scale-110 duration-500 ease-in-out"
                width={[120, 240, 360]}
                sizes="(max-width: 120px) 120px, (max-width: 240px) 240px, (max-width: 360px) 360px"
              />
            </a>
          ))
        }
      </div>
      <!-- <div class="w-full flex justify-center mt-20">
        <a href="/pilot-training" class="btn-primary text-xl w-full lg:w-1/2"
          >Start Pilot Career Training</a
        >
      </div> -->
    </div>
  </div>
</section>

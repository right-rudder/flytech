---
import "../styles/global.css";
import {
  COMPANY_NAME,
  GEO_LATITUDE,
  GEO_LONGITUDE,
  COMPANY_NICKNAME,
} from "../consts.ts";

import AdvancedSEO from "../layouts/AdvancedSeo.astro";
interface Props {
  title: string;
  description: string;
  keywords: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url, Astro.site).toString();

const {
  title,
  description,
  keywords,
  image = "/FlyTech-OG-Image.png",
} = Astro.props;
---


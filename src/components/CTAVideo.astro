---
import { YouTube } from "astro-embed";
const { video, data } = Astro.props;
---

<div class="bg-neutral-900">
  <div
    class="flex flex-col lg:flex-row py-24 justify-center gap-20 px-2 lg:px-8 max-w-7xl mx-auto overflow-hidden"
  >
    <div class="flex-1 flex justify-center items-center">
      <YouTube
        id={video.videoId}
        class="aspect-video w-full"
        params="start=0"
        posterQuality="max"
      />
    </div>

    <div class="flex-1 flex items-center">
      <div class="mx-auto space-y-8">
        <!-- <h2 class="text-lg font-bold text-primary-500 uppercase tracking-wide">
          <Fragment set:html={video.title} />
        </h2> -->
        <h2
          class="text-4xl md:text-5xl font-semibold text-white leading-tight uppercase"
        >
          <Fragment set:html={data.headerH1} />
        </h2>
        <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
          {data.paragraph}
        </p>
      </div>
    </div>
  </div>
</div>

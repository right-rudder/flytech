---
import BaseLayout from "../../layouts/BaseLayout.astro";
import HeaderSmall from "../../components/HeaderSmall.astro";
import CTAColor from "../../components/CTAColor.astro";
import flyWithUsCTA from "../../data/fly-with-us-cta";
import ProgramDetails from "../../components/ProgramDetails.astro";
import programData from "../../data/flight-training/sportCertificate.js";
import FlightTrainingCourseSchema from "../../components/FlightTrainingCourseSchema.astro";
import BreadcrumbSchema from "../../components/BreadcrumbSchema.astro";
import CTAVideoWhite from "../../components/CTAVideoWhite.astro";
import videoList from "../../data/videos.js";

const randomVideo = videoList[Math.floor(Math.random() * videoList.length)];
const dataForVideo = {
  headerH1: `<span class="text-primary-600 uppercase text-lg lg:text-2xl lg:max-w-3xl font-sans text-center font-bold tracking-tight">Fly with the team thatâ€™s</br></span>revolutionizing pilot training`,
  paragraph:
    "At FlyTech Pilot Academy, we combine modern aircraft, immersive technology, and a passionate team of instructors to give you an efficient, professional, and enjoyable path to the cockpit. Whether you're starting fresh or advancing your career, we make it simple.",
  buttons: [],
};

const breadcrumbItems = [
  { name: "Home", item: "/" },
  { name: "Flight Training", item: "/flight-training" },
  {
    name: "Sport Pilot Certificate",
    item: "/flight-training/sport-pilot-certificate",
  },
];
---

<BaseLayout
  siteTitle={programData.pageTitle}
  siteDescription={programData.pageDescription}
  keywords={programData.pageKeywords}
>
  <FlightTrainingCourseSchema
    courseName="Sport Pilot Certificate"
    description="Learn to fly light sport aircraft with our Sport Pilot Certificate program. Perfect for recreational flying with simplified medical requirements and focused training on modern LSA aircraft."
    duration="3-6 months"
    totalHours={20}
    flightHours={15}
    groundHours={5}
    price="$8,500"
    prerequisites={[
      "Valid driver's license",
      "Basic medical self-certification",
    ]}
    outcomes={[
      "Operate light sport aircraft safely",
      "Navigate in controlled and uncontrolled airspace",
      "Understand weather patterns and decision making",
      "Master basic aircraft systems and procedures",
      "Execute safe takeoffs and landings",
    ]}
    certification="FAA Sport Pilot Certificate"
    difficulty="Beginner"
  />

  <BreadcrumbSchema items={breadcrumbItems} />

  <HeaderSmall content={programData.header} />
  <CTAVideoWhite video={randomVideo} data={dataForVideo} />
  <ProgramDetails program={programData.details} />
  <CTAColor content={flyWithUsCTA} />
</BaseLayout>

---
import BaseLayout from "../layouts/BaseLayout.astro";
import programsSwiper from "../data/flight-training/programSwiper";
import enrollInfo from "../data/enroll-info";
import ProgramSwiper from "../components/ProgramSwiper.astro";
import GroundSchoolComponent from "../components/Forms/GroundSchool.astro";
import ServiceSchema from "../components/ServiceSchema.astro";
import CTAVideoWhite from "../components/CTAVideoWhite.astro";
import HeaderSmall from "../components/HeaderSmall.astro";
import videoList from "../data/videos.js";
import PageSummary from "../components/PageSummary.astro";

const groundSchoolPage = {
  data: {
    // SEO Header Stuff
    pageTitle:
      "Check Ride Ground School Reservation | January 17, 2026 | FlyTech Pilot Academy, St. Joseph, MO",

    pageDescription:
      "Reserve your spot for FlyTech Pilot Academy’s Check Ride Ground School on January 17, 2026, at Rosecrans Memorial Airport in St. Joseph, Missouri. Prepare with confidence through focused ground instruction designed to help you succeed on your FAA check ride.",

    pageKeywords:
      "check ride ground school, checkride prep class, FAA check ride preparation, instrument check ride prep, flight review ground school, FlyTech Pilot Academy ground school, Rosecrans Memorial Airport ground school, pilot check ride prep Missouri, aviation ground school January 2026",

    checkboxText: `I agree to <a href="/terms-of-service" target="_blank" class="font-semibold hover:underline">terms</a> & <a href="/privacy-policy" target="_blank" class="font-semibold hover:underline">conditions</a> provided by the company. By providing my phone number, I agree to receive text messages from the business.`,

    header: {
      imagePath:
        "/src/assets/Flytech_Saint-Joseph-Missouri_Flight-School_Ground-School-blog-2026.webp",
      imageAlt: "FlyTech Pilot Academy aircraft parked on runway at sunset",
      headerH1: `GROUND SCHOOl <br>  <strong class="text-primary-600">CHECK RIDE PREP</strong>`,
      paragraph: "",
      buttons: [
        { link: "#ground-school", name: "Reserve Spot", primary: true },
      ],
    },
    pageSummary: {
      title: "Get in Touch with FlyTech",
      paragraphs: [
        "Have questions about flight training, Discovery Flights, or program options? Our team at FlyTech is here to help you every step of the way. Whether you’re just exploring aviation or ready to begin your pilot journey, we’ll provide the guidance you need.",
        "Reach out to schedule a visit, request more information, or speak directly with an instructor. We’re committed to making your path to the skies clear, simple, and exciting.",
      ],
      buttons: [],
    },
  },
};

const data = groundSchoolPage.data;
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <HeaderSmall content={data.header} />
  <ServiceSchema
    serviceName="Flight Training Consultation"
    description="Contact FlyTech Pilot Academy for information about flight training programs, scheduling, and aviation career guidance. Located at Rosecrans Memorial Airport in Saint Joseph, Missouri."
    serviceType="EducationalService"
    duration="Consultation"
    price="Free consultation"
    category="Aviation Consultation"
  />

  <!-- <HeaderSmall content={data.header} /> -->
  <!-- <PageSummary content={data.pageSummary} /> -->
  <!-- <CTAVideoWhite video={randomVideo} data={dataForVideo} /> -->
  <GroundSchoolComponent />
  <ProgramSwiper content={programsSwiper} />
  <script src="../scripts/creativeSwiper.js"></script>
</BaseLayout>

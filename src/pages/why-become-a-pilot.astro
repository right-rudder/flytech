---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderSmall from "../components/HeaderSmall.astro";
import ProgramSwiper from "../components/ProgramSwiper.astro";
import CTAColor from "../components/CTAColor.astro";
import programsSwiper from "../data/flight-training/programSwiper.js";
import flyWithUsCTA from "../data/fly-with-us-cta";
import pilotTrainingMadeSimple from "../data/pages/why-become-pilot.js";
import PageSummary from "../components/PageSummary.astro";
import ImageComp from "../components/ImageComp.astro";
import PriceCalcZero2Hero from "../components/priceCalcZero2Hero";
import CTAVideo from "../components/CTAVideo.astro";
import videoList from "../data/videos.js";
import { getCurrentVideo } from "../scripts/videoSpinner.js";
import RoadMap from "../components/RoadMap.astro";

const { data } = pilotTrainingMadeSimple;

const currentVideo = getCurrentVideo(videoList, "take off and adhoc ifr setup");

const dataForVideo = {
  headerH1: "What Our Students Say",
  paragraph:
    "Discover how FlyTech Pilot Academy simplifies the pilot training process, making it more accessible and enjoyable for aspiring pilots.",
};
---

<BaseLayout
  siteTitle={data.pageTitle}
  siteDescription={data.pageDescription}
  keywords={data.pageKeywords}
>
  <!-- HEADER -->
  <HeaderSmall content={data.header} />
  <!-- PAGE SUMMARY -->
  <PageSummary content={data.pageSummary} />
  <RoadMap content={data.roadMap} />
  <CTAVideo video={currentVideo} data={dataForVideo} />

  <!-- <PriceCalcZero2Hero client:load /> -->

  <ProgramSwiper content={programsSwiper} />
  <CTAColor content={flyWithUsCTA} />
  <script src="../scripts/creativeSwiper.js"></script>
</BaseLayout>
